                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/fontjawi"
                android:text="Suai Padan"
                android:textSize="25sp" />
            <TextView
                android:id="@+id/suaiPadan"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:textSize="20sp"
                android:layout_marginLeft="165dp"
                android:layout_marginTop="10dp"
                android:text="10" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="150dp">

            <ImageView
                android:id="@+id/imageView30"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/vote" />

            <TextView
                android:id="@+id/BETUL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/fontjawi"
                android:text="Betul atau Salah"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/betulSalah"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:textSize="20sp"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="10dp"
                android:text="10" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="200dp">

            <ImageView
                android:id="@+id/imageView39"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/spelling" />

            <TextView
                android:id="@+id/ejaan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/fontjawi"
                android:text="Eja Jawi"
                android:textSize="25sp" />

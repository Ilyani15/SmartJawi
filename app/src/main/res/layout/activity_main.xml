<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main_layout"
    tools:context=".MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/frame_main"/>

    <!-- Meow Bottom Navigation-->
    <com.etebarian.meowbottomnavigation.MeowBottomNavigation
        android:id="@+id/meow_Bottom_Navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/yellow_tip"
        app:mbn_circleColor="@color/yellow_tip"
        app:mbn_backgroundBottomColor="@color/apricot"
        app:mbn_countBackgroundColor="#ff6f00"
        app:mbn_countTextColor="#BA5757"
        app:mbn_defaultIconColor="@color/brown"
        app:mbn_selectedIconColor="@color/orange_red"
        app:mbn_shadowColor="#1f212121"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>

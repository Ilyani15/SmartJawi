<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/smartjjawi"
    tools:context=".Fragments.GameFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <RelativeLayout
            android:id="@+id/dua"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="130dp"
            android:layout_marginRight="120dp"
            android:layout_weight="1"
            android:background="@drawable/btnbg"
            android:clickable="true"
            android:elevation="3dp"
            android:padding="10dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/silangKata"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/crossword" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/silangKata"
                android:layout_alignStart="@+id/silangKata"
                android:layout_alignEnd="@+id/silangKata"
                android:fontFamily="@font/fontjawi"
                android:gravity="center"
                android:text="Silang Kata"
                android:textAllCaps="false"
                android:textColor="@color/background"
                android:textSize="20sp" />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:gravity="center"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/satu"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:background="@drawable/btnbg"
                android:gravity="center"
                android:clickable="true"
                android:elevation="3dp">

                <ImageView
                    android:id="@+id/kadMemori"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/cardgames" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/kadMemori"
                    android:layout_alignStart="@+id/kadMemori"
                    android:layout_alignEnd="@+id/kadMemori"
                    android:fontFamily="@font/fontjawi"
                    android:gravity="center"
                    android:text="Kad Memori"
                    android:textAllCaps="false"
                    android:textColor="@color/background"
                    android:textSize="20sp" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/tiga"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:background="@drawable/btnbg"
                android:clickable="true"
                android:gravity="center"
                android:elevation="3dp">

                <ImageView
                    android:id="@+id/suaiPadan"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/draganddrop" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/suaiPadan"
                    android:layout_alignStart="@+id/suaiPadan"
                    android:layout_alignEnd="@+id/suaiPadan"
                    android:fontFamily="@font/fontjawi"
                    android:gravity="center"
                    android:text="Suai Padan"
                    android:textAllCaps="false"
                    android:textColor="@color/background"
                    android:textSize="20sp" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/empat"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/btnbg"
                android:elevation="3dp">

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="49dp"
                    android:layout_marginTop="120dp"
                    android:fontFamily="@font/fontjawi"
                    android:text="Eja Jawi"
                    android:textAlignment="center"
                    android:textColor="@color/background"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/imageView9"
                    android:layout_width="97dp"
                    android:layout_height="98dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="26dp"
                    android:layout_marginTop="13dp"
                    android:src="@drawable/spelling" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/lima"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:background="@drawable/btnbg"
                android:elevation="3dp">

                <ImageView
                    android:id="@+id/betulSalah"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/vote" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/betulSalah"
                    android:layout_alignStart="@+id/betulSalah"
                    android:layout_alignEnd="@+id/betulSalah"
                    android:fontFamily="@font/fontjawi"
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:text="Betul/Salah"
                    android:textAllCaps="false"
                    android:textColor="@color/background"
                    android:textSize="20sp" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/questionNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:text="Jom Main Game"
        android:textSize="40sp"
        android:fontFamily="@font/summary"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>
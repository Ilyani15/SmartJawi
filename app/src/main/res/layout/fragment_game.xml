<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yellow_tip"
    tools:context=".Fragments.GameFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize">
            <ImageView
                android:id="@+id/back_pressed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:padding="15dp"
                android:src="@drawable/ic_baseline_arrow_back_24" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="15dp"
                android:src="@drawable/baseline_search_24_black" />
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/brandon_grotesque_black"
            android:layout_gravity="center"
            android:text="mari bermain !"
            android:textAllCaps="true"
            android:textSize="30sp"
            android:layout_marginBottom="15dp"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="30dp"
                android:paddingTop="10dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/ivGame1"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:src="@drawable/logo_game_tulis"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Game 1"
                            android:fontFamily="@font/kg_cornerofthe_sky"
                            android:textSize="20sp"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/cordovan_brown"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/ivGame2"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:src="@drawable/logo_game_win"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Jom Eja"
                            android:fontFamily="@font/kg_cornerofthe_sky"
                            android:textSize="20sp"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/cordovan_brown"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/ivGame3"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:src="@drawable/logo_game_puzzle"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Memory Game"
                            android:fontFamily="@font/kg_cornerofthe_sky"
                            android:textSize="20sp"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/cordovan_brown"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/ivGame4"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:src="@drawable/logo_game_kapal"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Game 4"
                            android:fontFamily="@font/kg_cornerofthe_sky"
                            android:textSize="20sp"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/cordovan_brown"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/ivGame5"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:src="@drawable/logo_game_shoot"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Game 5"
                            android:fontFamily="@font/kg_cornerofthe_sky"
                            android:textSize="20sp"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/cordovan_brown"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
<!--                    <LinearLayout-->
<!--                        android:layout_width="0dp"-->
<!--                        android:layout_height="match_parent"-->
<!--                        android:layout_weight="1"-->
<!--                        android:gravity="center"-->
<!--                        android:orientation="vertical">-->
<!--                        <ImageView-->
<!--                            android:id="@+id/ivGame6"-->
<!--                            android:scaleType="centerInside"-->
<!--                            android:layout_width="100dp"-->
<!--                            android:layout_height="100dp"-->
<!--                            android:background="@color/Transparent"-->
<!--                            android:src="@drawable/logo_game_shoot"/>-->
<!--                        <TextView-->
<!--                            android:layout_width="wrap_content"-->
<!--                            android:layout_height="wrap_content"-->
<!--                            android:text="Game 6"-->
<!--                            android:fontFamily="@font/kg_cornerofthe_sky"-->
<!--                            android:textSize="20sp"-->
<!--                            android:layout_marginTop="5dp"-->
<!--                            android:textColor="@color/cordovan_brown"/>-->
<!--                    </LinearLayout>-->
                </LinearLayout>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>


</RelativeLayout>
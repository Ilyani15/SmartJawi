<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="fill_parent"
android:layout_height="match_parent"
tools:context=".Game.MG.Intro_MG"
android:background="@drawable/smartjjawi">

<FrameLayout
    android:id="@+id/containerGame"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/bganimation"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bganimation">
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/bganimation2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bganimation">
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="280dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTajukGame"
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/kg_cornerofthe_sky"
                android:gravity="center"
                android:shadowColor="@color/black"
                android:shadowDx="10"
                android:shadowDy="5"
                android:shadowRadius="2"
                android:text="MARI BERMAIN KAD MEMORI!"
                android:textColor="@color/lightWhite"
                android:textSize="40dp" />

            <Button
                android:id="@+id/btn_play"
                android:layout_width="110dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:backgroundTint="@color/lime"
                android:fontFamily="@font/font"
                android:onClick="onClick"
                android:text="@string/play"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="22dp" />

            <Button
                android:id="@+id/btn_quit"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp"
                android:layout_weight="1"
                android:backgroundTint="@color/orange_red"
                android:fontFamily="@font/font"
                android:onClick="onClick"
                android:text="@string/quit"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="22dp" />
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>
</RelativeLayout>
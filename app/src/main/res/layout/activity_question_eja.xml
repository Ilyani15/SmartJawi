<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:id="@+id/answers_eja_LL"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_eja_content"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.90"
        android:orientation="vertical"
        android:weightSum="1">
        <LinearLayout
            android:id="@+id/eja_score_time_layout"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:orientation="vertical"
            android:weightSum="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/scoreEja"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Skor : 0"
                    android:textColor="#00695C"
                    android:textSize="25dp"
                    android:textStyle="bold" />
                <LinearLayout
                    android:orientation="horizontal"
                    android:id="@+id/linear_hearts_eja"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </LinearLayout>
                <TextView
                    android:id="@+id/timerEja"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="00:60"
                    android:textColor="#00695C"
                    android:textSize="25dp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/gambarEja_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="50dp"
            android:layout_marginTop="100dp"
            android:weightSum="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/imgQuestionEja"
                    android:src="@drawable/game_buku"
                    android:layout_width="wrap_content"
                    android:layout_height="250dp"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/answer_eja_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:minHeight="60dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:id="@+id/placeholder_eja_LL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:orientation="horizontal">
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yellow_tip"
    tools:context=".NomborJawi.NomborJawiActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_alignParentTop="true"
        android:gravity="top"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <ImageButton
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:id="@+id/homebtn_nombor"
                android:background="@drawable/ic_home"
                android:layout_marginStart="15dp"
                android:layout_alignParentStart="true"/>
            <ImageButton
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:id="@+id/speakbtn_nombor"
                android:background="@drawable/ic_speakerr"
                android:layout_marginEnd="15dp"
                android:layout_alignParentEnd="true"
                android:onClick="onSpeakButtonClick"/>
        </RelativeLayout>
    </LinearLayout>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vpJawiNum"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="65dp"
        android:layout_marginBottom="105dp"
        android:layout_marginHorizontal="5dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_alignParentBottom="true"
        android:gravity="bottom"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp">
            <ImageButton
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/prevbtn_NoJawi"
                android:src="@drawable/nav_prevbtn"
                android:scaleType="centerInside"
                android:background="@color/Transparent"
                android:layout_marginStart="15dp"
                android:layout_alignParentLeft="true"/>
            <ImageButton
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/nextbtn_NoJawi"
                android:src="@drawable/nav_nextbtn"
                android:scaleType="centerInside"
                android:background="@color/Transparent"
                android:layout_marginEnd="15dp"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/fragment_nombor"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</RelativeLayout>